{{!< default}}

{{#author}}
    <main class="site__content background-alternate">
        <section class="section section--only-top print-padding-none">
            <div class="container">

                <div class="article">

                    <div class="article__meta">
                        <span class="spacing-right-1">
                            Autor
                        </span>
                        {{> "staff-label"}}
                    </div>

                    <h1 class="article__title spacing-bottom">{{name}}</h1>

                    <div class="media">

                        {{#if profile_image}}
                            <div>
                                <div class="avatar">
                                    <img
                                        src="{{img_url profile_image size="avatar_medium_2x"}}"
                                        loading="lazy"
                                        class="avatar__image"
                                        alt="{{name}}"
                                    />
                                </div>
                            </div>
                        {{/if}}

                        {{#if bio}}
                            <div class="author-card">
                                <div class="author-card__bio">
                                    <p class="author-card__text spacing-bottom-small js-nbsp js-external-links">
                                        {{bio}}
                                    </p>
                                    <div class="author-card__links">
                                        {{#if location}}
                                            <span class="spacing-right-2">
                                                {{location}}
                                            </span>
                                        {{/if}}
                                        {{#if website}}
                                            <a
                                                href="{{website}}"
                                                target="_blank"
                                                rel="noopener"
                                                class="button button--secondary button--small button--square spacing-right-1"
                                                title="Web autora"
                                            >
                                                <span class="icon">
                                                    {{> "icons/website"}}
                                                </span>
                                                <span class="visually-hidden">
                                                    Web
                                                </span>
                                            </a>
                                        {{/if}}
                                        {{#if twitter}}
                                            <a
                                                href="{{twitter_url}}"
                                                target="_blank"
                                                rel="noopener"
                                                class="button button--secondary button--small button--square spacing-right-1"
                                                title="Twitter autora"
                                            >
                                                <span class="icon">
                                                    {{> "icons/twitter"}}
                                                </span>
                                                <span class="visually-hidden">
                                                    Twitter
                                                </span>
                                            </a>
                                        {{/if}}
                                        {{#if facebook}}
                                            <a
                                                href="{{facebook_url}}"
                                                target="_blank"
                                                rel="noopener"
                                                class="button button--secondary button--small button--square spacing-right-1"
                                                title="Facebook autora"
                                            >
                                                <span class="icon">
                                                    {{> "icons/facebook"}}
                                                </span>
                                                <span class="visually-hidden">
                                                    Facebook
                                                </span>
                                            </a>
                                        {{/if}}
                                        <a
                                            href="https://feedly.com/i/subscription/feed/{{url absolute="true"}}rss/"
                                            target="_blank"
                                            rel="noopener"
                                            class="button button--secondary button--small button--square"
                                            title="RSS feed s články autora"
                                        >
                                            <span class="icon">
                                                {{> "icons/rss"}}
                                            </span>
                                            <span class="visually-hidden">
                                                RSS
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {{/if}}

                    </div>
                </div>

            </div>
        </section>
        <section class="section">
            <div class="container">

                <h2>Články</h2>

            </div>
            <div class="container container--dense">

                <div class="post-feed">
                    {{#foreach ../posts}}
                        {{#has tag="Články"}}
                            <div class="post-feed__item">
                                {{> "post-card" headingLevel=3}}
                            </div>
                        {{/has}}
                    {{/foreach}}
                </div>

            </div>
        </section>
    </main>
{{/author}}

{{> "footer"}}

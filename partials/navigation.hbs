<ul class="navigation__list">
    {{#foreach navigation}}
        <li
            class="
                navigation__item
                {{#if current}}
                    navigation__item--current
                {{else}}
                    {{!-- Is rendered as `navigation__item--current-parent`: --}}
                    {{link_class for=slug activeClass="navigation__item--current"}}
                {{/if}}
            "
        >
            <a href="{{url absolute="true"}}" class="navigation__link">
                {{label}}
            </a>
        </li>
    {{/foreach}}
</ul>

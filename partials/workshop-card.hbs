<article
    class="
        post-card
        background-primary
        color-white
        {{post_class}}
        {{#has tag="#cover"}}cover{{/has}}
    "
>
    <div class="post-card__content {{#has tag="#cover"}}cover__text{{/has}}">

        <header>
            <section class="post-card__meta">
                {{#has tag="#new"}}
                    <span class="tag tag--new">nové</span>
                {{/has}}
            </section>
            <h2 class="post-card__title">
                <a href="{{url}}" class="post-card__title__link link-unstyled js-nbsp">
                    {{title}}
                </a>
            </h2>
        </header>

        <section class="post-card__summary">
            <p class="js-nbsp">{{excerpt words=33}}</p>
        </section>

        <footer>
            <ul class="list-unstyled">
                {{#foreach authors}}
                    <li>

                        <div class="author-card">
                            <div class="author-card__media">
                                {{#if profile_image}}
                                    <a href="{{url}}" class="avatar avatar--small avatar--link">
                                        <img
                                            class="avatar__image"
                                            src="{{img_url profile_image size="xs"}}"
                                            alt="{{name}}"
                                        />
                                    </a>
                                {{else}}
                                    <a href="{{url}}" class="avatar avatar--small avatar--link">
                                        <span class="avatar__image">
                                            {{> "icons/avatar"}}
                                        </span>
                                    </a>
                                {{/if}}
                            </div>
                            <div class="author-card__content">
                                <h3 class="author-card__name">
                                    <a href="{{url}}" class="post-card__link link-unstyled">
                                        Lektor: {{name}}
                                    </a>
                                </h3>
                            </div>
                        </div>

                    </li>
                {{/foreach}}
            </ul>

        </footer>

    </div>

    <div class="post-card__footer {{#has tag="#cover"}}cover__text{{/has}}">
        <a href="{{url}}" class="button button--outline">
            Více o&nbsp;školení
        </a>
    </div>

    {{#has tag="#cover"}}
        {{#if feature_image}}
            <figure class="cover__canvas">
                <img
                    src="{{img_url feature_image size="xl"}}"
                    srcset="
                        {{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w
                    "
                    sizes="
                        (min-width: 1381px) calc((100vw - 2 * 2.25rem) * 2 / 3),
                        (min-width: 32em) calc(100vw - 2 * 2.25rem),
                        calc(100vw - 2 * 1.25rem)
                    "
                    class="cover__image"
                    alt="{{title}}"
                />
            </figure>
        {{/if}}
    {{/has}}

</article>

{{#primary_author}}

    <section class="author-card">
        <div class="author-card__media">

            <a href="{{url}}" class="avatar avatar--link">
                {{#if profile_image}}
                    <img src="{{profile_image}}" class="avatar__image" alt="{{name}}" />
                {{else}}
                    <span class="avatar__image">
                        {{> "icons/avatar"}}
                    </span>
                {{/if}}
            </a>

        </div>
        <div class="author-card__content">

            <h3 class="author-card__name">Lektor: {{name}}</h3>

            <p class="author-card__bio">
                {{#if bio}}
                    <span class="author-card__bio__text js-nbsp">
                        {{bio}}
                    </span>
                {{/if}}
                <span class="author-card__bio__links">
                    <a href="{{url}}" class="author-card__link color-white">
                        VÃ­ce o&nbsp;lektorovi
                    </a>
                </span>
            </p>

        </div>
    </section>

{{/primary_author}}

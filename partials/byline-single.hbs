{{#primary_author}}

    <section class="author-card">

        {{#if profile_image}}
            <div class="author-card__media">
                <a href="{{url}}" class="avatar avatar--link">
                    <img src="{{profile_image}}" class="avatar__image" alt="{{name}}" />
                </a>
            </div>
        {{/if}}

        <div class="author-card__content">

            <h3 class="author-card__name">{{name}}</h3>

            <p class="author-card__bio">
                {{#if bio}}
                    <span class="author-card__bio__text js-nbsp">
                        {{bio}}
                    </span>
                {{/if}}

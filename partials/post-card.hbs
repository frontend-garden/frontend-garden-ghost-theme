<article
    class="
        post-card
        {{post_class}}
        {{#unless feature_image}}no-image{{/unless}}
    "
>

    {{!-- We don't need cover images yet. --}}
    {{!--
    {{#if feature_image}}
        <a class="post-card__image-link" href="{{url}}">
            <img
                class="post-card__image"
                src="{{img_url feature_image size="m"}}"
                srcset="
                    {{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w
                "
                sizes="(max-width: 1000px) 400px, 700px"
                alt="{{title}}"
            />
        </a>
    {{/if}}
    --}}

    <div class="post-card__content">

        <header class="post-card__header">
            <section class="post-card__meta">
                {{#if primary_tag}}
                    <a href="{{primary_tag.url}}" class="post-card__link">{{primary_tag.name}}</a>
                    â€”
                {{/if}}
                {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}
            </section>
            <h2 class="post-card__title">
                <a href="{{url}}" class="post-card__title__link link-unstyled">
                    {{title}}
                </a>
            </h2>
        </header>

        <section class="post-card__summary">
            <p>{{excerpt words="33"}}</p>
        </section>

        <footer>
            <ul class="list-unstyled">
                {{#foreach authors}}
                    <li>

                        <div class="author-card">
                            <div class="author-card__media">
                                {{#if profile_image}}
                                    <a href="{{url}}" class="avatar avatar--small avatar--link">
                                        <img
                                            class="avatar__image"
                                            src="{{img_url profile_image size="xs"}}"
                                            alt="{{name}}"
                                        />
                                    </a>
                                {{else}}
                                    <a href="{{url}}" class="avatar avatar--small avatar--link">
                                        <span class="avatar__image">
                                            {{> "icons/avatar"}}
                                        </span>
                                    </a>
                                {{/if}}
                            </div>
                            <div class="author-card__content">
                                <h3 class="author-card__name">
                                    <a href="{{url}}" class="post-card__link link-unstyled">
                                        {{name}}
                                    </a>
                                </h3>
                            </div>
                        </div>

                    </li>
                {{/foreach}}
            </ul>
        </footer>

    </div>
</article>

{{!< default}}

{{#post}}
    <main class="site__content">
        <article class="article">

            <header
                class="
                    section
                    section--dense
                    background-primary
                    color-white
                    {{#has tag="#cover"}}
                        cover
                    {{/has}}
                "
            >
                <div class="{{#has tag="#cover"}}cover__text{{/has}}">
                    <div class="container {{^has tag="#cover"}}container--article{{/has}}">

                        <section class="article__meta">
                            <span class="spacing-right-1">
                                {{#foreach tags}}
                                    <a href="{{url}}" class="color-white">{{name}}</a>
                                {{/foreach}}
                            </span>
                            {{#has tag="#new"}}
                                <span class="tag tag--new">nové</span>
                            {{/has}}
                        </section>

                        <h1 class="article__title js-nbsp">{{title}}</h1>
                        <h2 class="article__summary js-nbsp">{{excerpt}}</h2>

                        <div class="article__author">
                            {{> "lecturer-single"}}
                        </div>

                    </div>
                </div>

                {{#has tag="#cover"}}
                    {{#if feature_image}}
                        <figure class="cover__canvas">
                            <img
                                src="{{img_url feature_image size="xl"}}"
                                srcset="
                                    {{img_url feature_image size="s"}} 300w,
                                    {{img_url feature_image size="m"}} 600w,
                                    {{img_url feature_image size="l"}} 1000w,
                                    {{img_url feature_image size="xl"}} 2000w
                                "
                                sizes="100vw"
                                class="cover__image"
                                alt="{{title}}"
                            />
                        </figure>
                    {{/if}}
                {{/has}}

            </header>

            <section
                class="
                    section
                    {{^has tag="#vd_workshop"}}section--dense{{/has}}
                    {{#has tag="#vd_workshop"}}section--dense-top{{/has}}
                "
            >
                <div class="container container--article">

                    <div class="editor js-nbsp js-external-links js-heading-anchors">
                        {{content}}
                    </div>

                    <a
                        href="mailto:adam@adamkudrna.cz?subject=Poptávka firemního školení – {{title}}"
                        class="button"
                    >
                        Poptat školení do firmy
                    </a>

                </div>
            </section>

            {{! Currently not used. }}
            {{!> "workshop-logos"}}

            {{#has tag="#vd_workshop"}}
                <section class="section">
                    <div class="container container--article">

                        {{> "vd-banner"}}

                    </div>
                </section>
            {{/has}}

            {{! Currently not used. }}
            {{!> "workshop-references"}}

        </article>

        {{#get "posts"
            include="authors,tags"
            filter="primary_author:{{primary_author.slug}}+primary_tag:clanek"
            limit="3"
            as |related|
        }}
            {{#if related}}
                {{> "related-posts" posts=related headline="Poslední články od lektora"}}
            {{/if}}
        {{/get}}

    </main>
{{/post}}

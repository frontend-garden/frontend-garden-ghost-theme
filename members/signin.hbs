{{!< ../default}}

<main class="site__content">
    <section class="section">
        <div class="container container--article">

            {{#if @member}}

                {{!-- Logado: Redirecionar para a página inicial --}}
                <script>window.location = '{{@site.url}}';</script>

            {{else}}

                {{!-- Não logado: Formulário de login --}}
                <form class="members-form" data-members-form="signin">
                    <h1>Bem-vindo de volta!</h1>
                    <p>Para ter acesso completo ao conteúdo, faça login.</p>

                    {{> "members/email-box" action="Entrar"}}

                    <div class="spacing-bottom">
                        <small>
                            Ainda não tem uma conta?
                            <a href="{{@site.url}}/registro/">Registre-se</a>.
                        </small>
                    </div>

                    {{> "members/feedback-success"
                        title="Só mais um passo!"
                        message="Verifique sua caixa de entrada e confirme seu login clicando no link."
                    }}

                    {{> "members/feedback-error"
                        message="Por favor, insira um endereço de e-mail válido."
                    }}
                </form>

            {{/if}}

        </div>
    </section>
</main>

{{> "footer" hideSubscribeForm=true}}

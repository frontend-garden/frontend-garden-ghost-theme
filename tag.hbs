{{!< default}}

<main class="site__content background-alternate">
    <section class="section section--dense-top">
        <div class="container">

            {{#tag}}
                <div class="article">
                    <div class="article__meta">Téma</div>
                    <h1 class="article__title">{{name}}</h1>
                    <div class="article__summary js-nbsp">
                        {{#if description}}
                            <p class="spacing-bottom-small">
                                {{description}}
                            </p>
                        {{/if}}
                        <small>
                            Sbírka
                            {{plural ../pagination.total empty='článků' singular='% článku' plural='% článků'}}
                        </small>
                    </div>
                </div>
            {{/tag}}

        </div>
    </section>
    <section class="section section--dense">
        <div class="container">

            <div class="post-feed">
                {{#foreach posts visibility="public"}}
                    <div class="post-feed__item">
                        {{> "post-card"}}
                    </div>
                {{/foreach}}
            </div>

        </div>
    </section>
</main>

{{> "footer"}}
